{
  "expo": {
    "name": "coffee-shop-app",
    "slug": "coffee-shop-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Sora-Bold.ttf",
            "./src/assets/fonts/Sora-ExtraBold.ttf",
            "./src/assets/fonts/Sora-ExtraLight.ttf",
            "./src/assets/fonts/Sora-Light.ttf",
            "./src/assets/fonts/Sora-Medium.ttf",
            "./src/assets/fonts/Sora-Regular.ttf",
            "./src/assets/fonts/Sora-SemiBold.ttf",
            "./src/assets/fonts/Sora-Thin.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}